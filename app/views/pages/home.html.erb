<!-- outer container for main page -->
<div class="container">
	<div class="row" id="welcome_div">
	
	  	<h2>Welcome to gigheap!</h2>
		<p class="sub_par">Gigheap is resource for Asheville tech job seekers.  There are couple of ways to make gigheap work for you...</p>		
		<!-- <%= link_to "Sign up", signup_path, class: "btn btn-small btn-warning" %> -->
		
		<!-- twitter link follows -->
  		<a href="https://twitter.com/heaptest" class="twitter-follow-button" data-show-count="false" data-show-screen-name="false">Follow @heaptest</a>
		<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>	
		
		<% if signed_in? %>
		<%= link_to "Post Job", postjob_path, class: "btn btn-small btn-primary" %>
		<% end %>

	</div>

 	<div class="container">
		<div class="row-fluid">
			<div class="span6 instructions">
				<p>Employers:</p>
				<p class="sub_par"><%= link_to "Sign up", signup_path %> and have your job listing tweeted to prospective employees immediately!</p>
			</div>
			<div class="span6 instructions">
				<p>Jobseekers:</p>
				<p class="sub_par">Follow gigheap and receive a tweet about new jobs as soon as they are submitted!</p>
			</div>
		</div>
	</div> 
	
  	<div id="info_div" class="container">
		<div class="row-fluid">
			<div class="content_div span6">
				<p class="instructions">Recent Job Tweets:</p>
  				<% @tweets.each do |t| %>
					<p class="sub_par"><i class="icon-chevron-right"></i><%= auto_link(t.text) %></p>
  				<% end %>
			</div>
					
			<div class="content_div span6">
				<!-- <p>recent jobs</p> -->
				<p class="instructions">Recent Job Listings:</p>
				<% @jobs.each do |j| %>
					<p class="sub_par"><i class="icon-chevron-right"></i><%= link_to j.title, j %></p>
				<% end %>
			</div>
		</div>
	</div>

  <!-- <%= @twitter_feed %> -->  
  <!-- remove rails image
  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
  -->
</div>

